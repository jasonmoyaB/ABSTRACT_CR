@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<link rel="icon" type="image/x-icon" href="~/assets/img/LOGO01.jfif" />
<section class="vh-100" style="height: 100vh; margin: 0;">
    <div class="container py-5 h-100" style="height: 100%;">
        <div class="row d-flex justify-content-center align-items-center h-100" style="height: 100%;">
            <div class="col col-xl-10" style="height: 100%;">
                <div class="card" style="border-radius: 1rem; height: 100%;">
                    <div class="row g-0 h-100" style="height: 100%;">
                        <div class="col-md-6 col-lg-5 d-none d-md-block" style="height: 100%;">
                            <img src="https://images.unsplash.com/photo-1504674900247-0877df9cc836?auto=format&fit=crop&w=1200&q=90"
                                 alt="Ingredientes frescos para recetas personalizadas"
                                 class="img-fluid"
                                 style="height: 100%; width: 100%; object-fit: cover; border-radius: 1rem 0 0 1rem;" />

                        </div>

                        <div class="col-md-6 col-lg-7 d-flex align-items-center" style="height: 100%;">
                            <div class="card-body p-4 p-lg-5 text-black" style="height: 100%; overflow-y: auto;">

                                <form method="post" action="/Account/CrearCuenta">
                                    <div class="text-center mb-4">
                                        <div class="h1 fw-bold mt-2">Abstract</div>
                                    </div>

                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">
                                        Crea tu cuenta
                                    </h5>

                                    <div class="form-outline mb-3">
                                        <input type="text" id="nombre" name="nombre" class="form-control form-control-lg" required />
                                        <label class="form-label" for="nombre">Nombre completo</label>
                                    </div>

                                    <div class="form-outline mb-3">
                                        <input type="email" id="email" name="email" class="form-control form-control-lg" required />
                                        <label class="form-label" for="email">Correo electrónico</label>
                                    </div>

                                    <div class="form-outline mb-3">
                                        <input type="password" id="password" name="password" class="form-control form-control-lg" required />
                                        <label class="form-label" for="password">Contraseña</label>
                                    </div>

                                    @* Confirmar contraseña opcional *@
                                    @* <div class="form-outline mb-4">
                                        <input type="password" id="confirmPassword" name="confirmPassword" class="form-control form-control-lg" required />
                                        <label class="form-label" for="confirmPassword">Confirmar contraseña</label>
                                    </div> *@

                                    <div class="form-check mb-4">
                                        <input class="form-check-input" type="checkbox" id="termsCheck" required />
                                        <label class="form-check-label" for="termsCheck">
                                            Acepto los <a href="#!" class="text-primary">Términos y condiciones</a>
                                        </label>
                                    </div>

                                    <div class="pt-1 mb-4">
                                        <button class="btn btn-dark btn-lg btn-block" type="submit">
                                            Crear cuenta
                                        </button>
                                    </div>

                                    <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                        ¿Ya tienes una cuenta?
                                        <a href="@Url.Action("Login", "Autenticacion")" style="color: #393f81;">
                                            Inicia sesión aquí
                                        </a>
                                    </p>

                                    <a href="#!" class="small text-muted">Términos de uso.</a>
                                    <a href="#!" class="small text-muted">Política de privacidad</a>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>