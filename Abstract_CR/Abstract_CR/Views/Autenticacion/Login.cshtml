@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewBag.Title = "Login";
}

<h2>Iniciar Sesión</h2>

<form method="post" action="/Cuenta/Login">
    <div class="form-group">
        <input type="email" name="correo" class="form-control" placeholder="Correo electrónico" required />
    </div>

    <div class="form-group">
        <input type="password" name="contrasena" class="form-control" placeholder="Contraseña" required />
    </div>

    <div class="form-group text-start mb-3">
        <input type="checkbox" name="recordarme" id="recordarme" />
        <label for="recordarme">Recordarme</label>
    </div>

    <button type="button" onclick="window.location.href='@Url.Action("Index", "Home")'">Ingresar</button>
    <button type="button" onclick="window.location.href='@Url.Action("Registro", "Autenticacion")'">Crear Cuenta</button>

    <div class="mt-3">
        <a href="/Autenticacion/PasswordReset">¿Olvidaste tu contraseña?</a>
    </div>
</form>

<style>
    .form-group {
        margin-bottom: 1rem;
        position: relative;
    }

    .form-control {
        border-radius: 12px;
        border: 2px solid #e9ecef;
        padding: 12px 15px;
        font-size: 16px;
        transition: all 0.3s ease;
        background: rgba(255, 255, 255, 0.9);
        width: 100%;
    }

        .form-control:focus {
            border-color: #FF8248;
            box-shadow: 0 0 0 0.2rem rgba(255, 130, 72, 0.25);
            background: #fff;
            outline: none;
        }

    button {
        background: linear-gradient(135deg, #B97A57 0%, #FF8248 100%);
        border: none;
        border-radius: 12px;
        padding: 15px 25px;
        font-weight: 600;
        font-size: 16px;
        transition: all 0.3s ease;
        color: white;
        margin-right: 10px;
        margin-bottom: 10px;
        cursor: pointer;
    }

        button:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(255, 130, 72, 0.4);
        }

    .text-start {
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .text-start input[type="checkbox"] {
            width: 18px;
            height: 18px;
            accent-color: #FF8248;
        }

        .text-start label {
            font-weight: 500;
            color: #495057;
            margin: 0;
            cursor: pointer;
        }

    .mt-3 a {
        color: #FF8248;
        text-decoration: none;
        font-weight: 500;
        transition: color 0.3s ease;
    }

        .mt-3 a:hover {
            color: #e6743f;
            text-decoration: underline;
        }

    h2 {
        color: #FF8248;
        margin-bottom: 2rem;
        text-align: center;
        font-weight: 600;
    }
</style>