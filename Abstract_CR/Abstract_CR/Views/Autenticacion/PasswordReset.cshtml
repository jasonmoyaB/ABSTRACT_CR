@{
    ViewData["Title"] = "Olvidaste tu contraseña";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #FF824 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .card {
            border-radius: 20px;
            overflow: hidden;
            backdrop-filter: blur(10px);
            background: rgba(255, 255, 255, 0.95);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .card-header {
            background: linear-gradient(135deg, #B97A57 0%, #FF8248 100%);
            border: none;
            padding: 2rem;
        }

            .card-header h3 {
                font-weight: 600;
                margin: 0;
            }

        .form-control {
            border-radius: 12px;
            border: 2px solid #e9ecef;
            padding: 15px 18px;
            font-size: 16px;
            transition: all 0.3s ease;
            background: rgba(255, 255, 255, 0.9);
        }

            .form-control:focus {
                border-color: #667eea;
                box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
                background: #fff;
            }

            .form-control.is-valid {
                border-color: #198754;
                background: rgba(25, 135, 84, 0.05);
            }

            .form-control.is-invalid {
                border-color: #dc3545;
                background: rgba(220, 53, 69, 0.05);
            }

        .btn-primary {
            background: linear-gradient(135deg, #B97A57 0%, #FF8248 100%);
            border: none;
            border-radius: 12px;
            padding: 15px 25px;
            font-weight: 600;
            font-size: 16px;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
                background: linear-gradient(135deg, #530F00 0%, #B5BE1D 100%);
            }

            .btn-primary:disabled {
                transform: none;
                opacity: 0.7;
            }

        .alert {
            border-radius: 12px;
            border: none;
            padding: 15px 20px;
        }

        .alert-success {
            background: rgba(25, 135, 84, 0.1);
            color: #FF8248;
            border-left: 4px solid #198754;
        }

        .alert-danger {
            background: rgba(220, 53, 69, 0.1);
            color: #FF8248;
            border-left: 4px solid #dc3545;
        }

        .form-label {
            font-weight: 600;
            color: #FF8248;
            margin-bottom: 8px;
        }

        .text-muted {
            color: #FF8248 !important;
        }

        .card-footer {
            background: rgba(248, 249, 250, 0.8);
            border-top: 1px solid rgba(0, 0, 0, 0.1);
            padding: 1.5rem;
        }

        .link-style {
            color: #FF8248;
            text-decoration: none;
            font-weight: 500;
            transition: color 0.3s ease;
        }

            .link-style:hover {
                color: #FF8248;
                text-decoration: underline;
            }

        .floating-icon {
            position: absolute;
            top: 50%;
            right: 15px;
            transform: translateY(-50%);
            color: #FF8248;
            transition: color 0.3s ease;
        }

        .input-group-custom {
            position: relative;
        }

        .form-control:focus + .floating-icon {
            color: #FF8248;
        }

        .fade-in {
            animation: fadeIn 0.6s ease-out;
        }

        .pulse {
            animation: pulse 2s infinite;
        }

        /* Media queries para responsive */
        @@media (max-width: 576px) {
            .container-fluid {
                padding: 15px;
            }

            .card-body {
                padding: 1.5rem !important;
            }

            .card-header {
                padding: 1.5rem !important;
            }

                .card-header h3 {
                    font-size: 1.3rem;
                }
        }

        /* Keyframes para animaciones */
        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes pulse {
            0% {
                box-shadow: 0 0 0 0 rgba(102, 126, 234, 0.4);
            }

            70% {
                box-shadow: 0 0 0 10px rgba(102, 126, 234, 0);
            }

            100% {
                box-shadow: 0 0 0 0 rgba(102, 126, 234, 0);
            }
        }
    </style>
</head>
<body>
    <div class="container-fluid d-flex align-items-center justify-content-center min-vh-100">
        <div class="row w-100">
            <div class="col-12 col-md-6 col-lg-4 mx-auto">
                <div class="card fade-in">
                    <div class="card-header text-white text-center">
                        <div class="mb-3">
                            <i class="fas fa-lock fa-3x"></i>
                        </div>
                        <h3>¿Olvidaste tu contraseña?</h3>
                        <p class="mb-0 mt-2 opacity-75">No te preocupes, te ayudamos a recuperarla</p>
                    </div>

                    <div class="card-body p-4">
                        <!-- Mensaje de éxito (oculto por defecto) -->
                        <div class="alert alert-success d-none" id="successAlert">
                            <i class="fas fa-check-circle me-2"></i>
                            <strong>¡Correo enviado!</strong> Revisa tu bandeja de entrada y sigue las instrucciones.
                        </div>

                        <!-- Mensaje de error (oculto por defecto) -->
                        <div class="alert alert-danger d-none" id="errorAlert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Error:</strong> <span id="errorMessage">Por favor, verifica tu correo electrónico.</span>
                        </div>

                        <div class="text-center mb-4">
                            <p class="text-muted">
                                Ingresa tu dirección de correo electrónico y te enviaremos un enlace seguro para restablecer tu contraseña.
                            </p>
                        </div>

                        <form id="forgotPasswordForm" novalidate>
                            <div class="mb-4">
                                <label for="email" class="form-label">
                                    <i class="fas fa-envelope me-1"></i>
                                    Correo Electrónico
                                </label>
                                <div class="input-group-custom">
                                    <input type="email"
                                           class="form-control"
                                           id="email"
                                           name="email"
                                           placeholder="correo@ejemplo.com"
                                           required
                                           autocomplete="email">
                                    <i class="fas fa-at floating-icon"></i>
                                </div>
                                <div class="invalid-feedback">
                                    Por favor, ingresa un correo electrónico válido.
                                </div>
                            </div>

                            <div class="d-grid gap-2 mb-4">
                                <button type="submit" class="btn btn-primary btn-lg" id="submitBtn">
                                    <span class="btn-content">
                                        <i class="fas fa-paper-plane me-2"></i>
                                        Enviar Enlace de Recuperación
                                    </span>
                                    <span class="spinner-border spinner-border-sm d-none me-2" id="spinner"></span>
                                    <span class="loading-text d-none">Enviando...</span>
                                </button>
                            </div>

                            <div class="text-center">
                                <div class="mb-3">
                                    <hr class="my-3">
                                    <small class="text-muted bg-white px-3 position-relative" style="top: -12px;">
                                        ¿Ya tienes tu contraseña?
                                    </small>
                                </div>

                                <p class="mb-2">
                                    <a href="@Url.Action("Login", "Autenticacion")" class="link-style">
                                        <i class="fas fa-sign-in-alt me-1"></i>
                                        Iniciar Sesión
                                    </a>
                                </p>
                                <p class="mb-0">
                                    <a href="@Url.Action("Registro", "Autenticacion")" class="link-style">
                                        <i class="fas fa-user-plus me-1"></i>
                                        Crear Nueva Cuenta
                                    </a>
                                </p>
                            </div>
                        </form>
                    </div>

                    <div class="card-footer text-center">
                        <small class="text-muted">
                            <i class="fas fa-shield-alt me-1"></i>
                            Tus datos están protegidos con encriptación SSL
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const form = document.getElementById('forgotPasswordForm');
            const emailInput = document.getElementById('email');
            const submitBtn = document.getElementById('submitBtn');
            const spinner = document.getElementById('spinner');
            const btnContent = submitBtn.querySelector('.btn-content');
            const loadingText = submitBtn.querySelector('.loading-text');
            const successAlert = document.getElementById('successAlert');
            const errorAlert = document.getElementById('errorAlert');
            const errorMessage = document.getElementById('errorMessage');

            // Auto-focus en el campo de email
            emailInput.focus();

            // Validación en tiempo real del email
            emailInput.addEventListener('input', function () {
                validateEmail();
            });

            emailInput.addEventListener('blur', function () {
                validateEmail();
            });

            function validateEmail() {
                const email = emailInput.value.trim();
                const emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;

                // Limpiar clases previas
                emailInput.classList.remove('is-valid', 'is-invalid');

                if (email === '') {
                    return false;
                } else if (emailRegex.test(email)) {
                    emailInput.classList.add('is-valid');
                    return true;
                } else {
                    emailInput.classList.add('is-invalid');
                    return false;
                }
            }

            // Manejo del envío del formulario
            form.addEventListener('submit', function (e) {
                e.preventDefault();

                // Ocultar alertas previas
                successAlert.classList.add('d-none');
                errorAlert.classList.add('d-none');

                const email = emailInput.value.trim();

                if (!validateEmail() || !email) {
                    emailInput.classList.add('is-invalid');
                    emailInput.focus();
                    showError('Por favor, ingresa un correo electrónico válido.');
                    return;
                }

                // Mostrar estado de carga
                showLoading(true);

                // Simular envío (aquí iría tu lógica de envío real)
                setTimeout(() => {
                    // Simulamos una respuesta exitosa
                    if (Math.random() > 0.2) { // 80% de éxito simulado
                        showSuccess();
                        form.reset();
                        emailInput.classList.remove('is-valid', 'is-invalid');
                    } else {
                        showError('No se pudo enviar el correo. Inténtalo de nuevo.');
                    }
                    showLoading(false);
                }, 2000);
            });

            function showLoading(loading) {
                if (loading) {
                    submitBtn.disabled = true;
                    btnContent.classList.add('d-none');
                    spinner.classList.remove('d-none');
                    loadingText.classList.remove('d-none');
                    submitBtn.classList.add('pulse');
                } else {
                    submitBtn.disabled = false;
                    btnContent.classList.remove('d-none');
                    spinner.classList.add('d-none');
                    loadingText.classList.add('d-none');
                    submitBtn.classList.remove('pulse');
                }
            }

            function showSuccess() {
                successAlert.classList.remove('d-none');
                successAlert.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
            }

            function showError(message) {
                errorMessage.textContent = message;
                errorAlert.classList.remove('d-none');
                errorAlert.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
            }

            // Cerrar alertas automáticamente después de 5 segundos
            function autoCloseAlert(alert) {
                setTimeout(() => {
                    alert.classList.add('d-none');
                }, 5000);
            }

            // Aplicar auto-close cuando se muestren las alertas
            const observer = new MutationObserver(function (mutations) {
                mutations.forEach(function (mutation) {
                    if (mutation.type === 'attributes' && mutation.attributeName === 'class') {
                        const target = mutation.target;
                        if (!target.classList.contains('d-none') &&
                            (target.id === 'successAlert' || target.id === 'errorAlert')) {
                            autoCloseAlert(target);
                        }
                    }
                });
            });

            observer.observe(successAlert, { attributes: true });
            observer.observe(errorAlert, { attributes: true });
        });
    </script>
</body>
</html>