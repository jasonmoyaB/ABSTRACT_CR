@{
    ViewData["Title"] = "Registro";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            background: linear-gradient(135deg); /* 🎨 FONDO DE LA PÁGINA */
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .card {
            border-radius: 20px;
            overflow: hidden;
            backdrop-filter: blur(10px);
            background: rgba(255, 255, 255, 0.95);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .card-header {
            background: linear-gradient(135deg, #B97A57 0%, #FF8248 100%); /* 🎨 HEADER DEL CARD */
            border: none;
            padding: 2rem;
        }

        .card-header h3 {
            font-weight: 600;
            margin: 0;
        }

        .form-control {
            border-radius: 12px;
            border: 2px solid #e9ecef;
            padding: 12px 15px;
            font-size: 16px;
            transition: all 0.3s ease;
            background: rgba(255, 255, 255, 0.9);
        }

        .form-control:focus {
                border-color: #FF8248; /* 🎨 COLOR DEL BORDE AL HACER FOCUS */
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25); /* 🎨 SOMBRA DEL FOCUS */
            background: #fff;
        }

        .form-control.is-valid {
            border-color: #198754;
            background: rgba(25, 135, 84, 0.05);
        }

        .form-control.is-invalid {
            border-color: #dc3545;
            background: rgba(220, 53, 69, 0.05);
        }

        .btn-primary {
            background: linear-gradient(135deg, #B97A57 0%, #FF8248 100%); /* 🎨 BOTÓN PRINCIPAL */
            border: none;
            border-radius: 12px;
            padding: 15px 25px;
            font-weight: 600;
            font-size: 16px;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4); /* 🎨 SOMBRA DEL BOTÓN AL HOVER */
                background: linear-gradient(135deg, #B97A57 0%, #FF8248 100%); /* 🎨 BOTÓN AL HOVER */
        }

        .btn-primary:disabled {
            transform: none;
            opacity: 0.7;
        }

        .alert {
            border-radius: 12px;
            border: none;
            padding: 15px 20px;
        }

        .alert-success {
            background: rgba(25, 135, 84, 0.1);
            color: #0f5132;
            border-left: 4px solid #198754;
        }

        .alert-danger {
            background: rgba(220, 53, 69, 0.1);
            color: #842029;
            border-left: 4px solid #dc3545;
        }

        .form-label {
            font-weight: 600;
            color: #495057;
            margin-bottom: 8px;
        }

        .text-muted {
            color: #6c757d !important;
        }

        .card-footer {
            background: rgba(248, 249, 250, 0.8);
            border-top: 1px solid rgba(0, 0, 0, 0.1);
            padding: 1.5rem;
        }

        .link-style {
            color: #FF8248; /* 🎨 COLOR DE LOS ENLACES */
            text-decoration: none;
            font-weight: 500;
            transition: color 0.3s ease;
        }

        .link-style:hover {
                color: #FF8248; /* 🎨 COLOR DE LOS ENLACES AL HOVER */
            text-decoration: underline;
        }

        .floating-icon {
            position: absolute;
            top: 50%;
            right: 15px;
            transform: translateY(-50%);
            color: #adb5bd;
            transition: color 0.3s ease;
            pointer-events: none;
        }

        .input-group-custom {
            position: relative;
        }

        .form-control:focus + .floating-icon {
            color: #FF8248; /* 🎨 ICONO FLOTANTE AL HACER FOCUS */
        }

        .form-control.is-valid + .floating-icon {
            color: #FF8248;
        }

        .form-control.is-invalid + .floating-icon {
            color: #FF8248;
        }

        .fade-in {
            animation: fadeIn 0.6s ease-out;
        }

        .pulse {
            animation: pulse 2s infinite;
        }

        .form-row {
            display: flex;
            gap: 15px;
        }

        .form-row .form-group {
            flex: 1;
        }

        /* Media queries para responsive */
        @@media (max-width: 768px) {
            .form-row {
                flex-direction: column;
                gap: 0;
            }

            .container-fluid {
                padding: 15px;
            }

            .card-body {
                padding: 1.5rem !important;
            }

            .card-header {
                padding: 1.5rem !important;
            }

            .card-header h3 {
                font-size: 1.3rem;
            }
        }

        /* Keyframes para animaciones */
        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes pulse {
            0% {
                box-shadow: 0 0 0 0 rgba(102, 126, 234, 0.4);
            }
            70% {
                box-shadow: 0 0 0 10px rgba(102, 126, 234, 0);
            }
            100% {
                box-shadow: 0 0 0 0 rgba(102, 126, 234, 0);
            }
        }

        .strength-meter {
            height: 4px;
            border-radius: 2px;
            margin-top: 5px;
            background: #e9ecef;
            overflow: hidden;
        }

        .strength-bar {
            height: 100%;
            width: 0%;
            transition: all 0.3s ease;
            border-radius: 2px;
        }

        .strength-weak { background: #dc3545; }
        .strength-fair { background: #fd7e14; }
        .strength-good { background: #ffc107; }
        .strength-strong { background: #198754; }
    </style>
</head>
<body>
    <div class="container-fluid d-flex align-items-center justify-content-center min-vh-100 py-4">
        <div class="row w-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5 mx-auto">
                <div class="card fade-in">
                    <div class="card-header text-white text-center">
                        <div class="mb-3">
                            <i class="fas fa-user-plus fa-3x"></i>
                        </div>
                        <h3>Crear Nueva Cuenta</h3>
                        <p class="mb-0 mt-2 opacity-75">Únete a nuestra comunidad</p>
                    </div>

                    <div class="card-body p-4">
                        <!-- Mensaje de éxito (oculto por defecto) -->
                        <div class="alert alert-success d-none" id="successAlert">
                            <i class="fas fa-check-circle me-2"></i>
                            <strong>¡Registro exitoso!</strong> Te has registrado correctamente.
                        </div>

                        <!-- Mensaje de error (oculto por defecto) -->
                        <div class="alert alert-danger d-none" id="errorAlert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Error:</strong> <span id="errorMessage">Por favor, verifica los datos ingresados.</span>
                        </div>

                        <form id="registerForm" novalidate>
                            <!-- Nombre -->
                            <div class="mb-3">
                                <label for="nombre" class="form-label">
                                    <i class="fas fa-user me-1"></i>
                                    Nombre <span class="text-danger">*</span>
                                </label>
                                <div class="input-group-custom">
                                    <input type="text"
                                           class="form-control"
                                           id="nombre"
                                           name="nombre"
                                           placeholder="Tu nombre"
                                           required
                                           autocomplete="given-name">
                                    <i class="fas fa-user floating-icon"></i>
                                </div>
                                <div class="invalid-feedback">
                                    El nombre es obligatorio (mínimo 2 caracteres).
                                </div>
                            </div>

                            <!-- Apellidos en fila -->
                            <div class="form-row mb-3">
                                <div class="form-group">
                                    <label for="primerApellido" class="form-label">
                                        <i class="fas fa-id-card me-1"></i>
                                        Primer Apellido <span class="text-danger">*</span>
                                    </label>
                                    <div class="input-group-custom">
                                        <input type="text"
                                               class="form-control"
                                               id="primerApellido"
                                               name="primerApellido"
                                               placeholder="Primer apellido"
                                               required
                                               autocomplete="family-name">
                                        <i class="fas fa-id-card floating-icon"></i>
                                    </div>
                                    <div class="invalid-feedback">
                                        El primer apellido es obligatorio.
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="segundoApellido" class="form-label">
                                        <i class="fas fa-id-card me-1"></i>
                                        Segundo Apellido <span class="text-danger">*</span>
                                    </label>
                                    <div class="input-group-custom">
                                        <input type="text"
                                               class="form-control"
                                               id="segundoApellido"
                                               name="segundoApellido"
                                               placeholder="Segundo apellido"
                                               required
                                               autocomplete="family-name">
                                        <i class="fas fa-id-card floating-icon"></i>
                                    </div>
                                    <div class="invalid-feedback">
                                        El segundo apellido es obligatorio.
                                    </div>
                                </div>
                            </div>

                            <!-- Teléfono -->
                            <div class="mb-3">
                                <label for="telefono" class="form-label">
                                    <i class="fas fa-phone me-1"></i>
                                    Teléfono <span class="text-danger">*</span>
                                </label>
                                <div class="input-group-custom">
                                    <input type="tel"
                                           class="form-control"
                                           id="telefono"
                                           name="telefono"
                                           placeholder="8888-8888"
                                           required
                                           autocomplete="tel">
                                    <i class="fas fa-phone floating-icon"></i>
                                </div>
                                <div class="invalid-feedback">
                                    Ingresa un número de teléfono válido (8 dígitos).
                                </div>
                                <small class="text-muted">Formato: 8888-8888</small>
                            </div>

                            <!-- Correo -->
                            <div class="mb-3">
                                <label for="correo" class="form-label">
                                    <i class="fas fa-envelope me-1"></i>
                                    Correo Electrónico <span class="text-danger">*</span>
                                </label>
                                <div class="input-group-custom">
                                    <input type="email"
                                           class="form-control"
                                           id="correo"
                                           name="correo"
                                           placeholder="correo@ejemplo.com"
                                           required
                                           autocomplete="email">
                                    <i class="fas fa-at floating-icon"></i>
                                </div>
                                <div class="invalid-feedback">
                                    Ingresa un correo electrónico válido.
                                </div>
                            </div>

                            <!-- Contraseña -->
                            <div class="mb-3">
                                <label for="password" class="form-label">
                                    <i class="fas fa-lock me-1"></i>
                                    Contraseña <span class="text-danger">*</span>
                                </label>
                                <div class="input-group-custom">
                                    <input type="password"
                                           class="form-control"
                                           id="password"
                                           name="password"
                                           placeholder="Mínimo 8 caracteres"
                                           required
                                           autocomplete="new-password">
                                    <i class="fas fa-eye toggle-password floating-icon" style="cursor: pointer; right: 45px;"></i>
                                    <i class="fas fa-lock floating-icon"></i>
                                </div>
                                <div class="strength-meter">
                                    <div class="strength-bar" id="strengthBar"></div>
                                </div>
                                <small id="strengthText" class="text-muted">Mínimo 8 caracteres</small>
                                <div class="invalid-feedback">
                                    La contraseña debe tener al menos 8 caracteres.
                                </div>
                            </div>

                            <!-- Confirmar Contraseña -->
                            <div class="mb-4">
                                <label for="confirmPassword" class="form-label">
                                    <i class="fas fa-lock me-1"></i>
                                    Confirmar Contraseña <span class="text-danger">*</span>
                                </label>
                                <div class="input-group-custom">
                                    <input type="password"
                                           class="form-control"
                                           id="confirmPassword"
                                           name="confirmPassword"
                                           placeholder="Repite tu contraseña"
                                           required
                                           autocomplete="new-password">
                                    <i class="fas fa-eye toggle-password floating-icon" style="cursor: pointer; right: 45px;"></i>
                                    <i class="fas fa-check-double floating-icon"></i>
                                </div>
                                <div class="invalid-feedback">
                                    Las contraseñas no coinciden.
                                </div>
                            </div>

                            <!-- Términos y condiciones -->
                            <div class="mb-4">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="terms" required>
                                    <label class="form-check-label" for="terms">
                                        Acepto los <a href="#" class="link-style">términos y condiciones</a> y la <a href="#" class="link-style">política de privacidad</a> <span class="text-danger">*</span>
                                    </label>
                                    <div class="invalid-feedback">
                                        Debes aceptar los términos y condiciones.
                                    </div>
                                </div>
                            </div>

                            <div class="d-grid gap-2 mb-4">
                                <button type="submit" class="btn btn-primary btn-lg" id="submitBtn">
                                    <span class="btn-content">
                                        <i class="fas fa-user-plus me-2"></i>
                                        Crear Cuenta
                                    </span>
                                    <span class="spinner-border spinner-border-sm d-none me-2" id="spinner"></span>
                                    <span class="loading-text d-none">Registrando...</span>
                                </button>
                            </div>

                            <div class="text-center">
                                <div class="mb-3">
                                    <hr class="my-3">
                                    <small class="text-muted bg-white px-3 position-relative" style="top: -12px;">
                                        ¿Ya tienes una cuenta?
                                    </small>
                                </div>

                                <p class="mb-0">
                                    <a href="@Url.Action("Login", "Autenticacion")" class="link-style">
                                        <i class="fas fa-sign-in-alt me-1"></i>
                                        Iniciar Sesión
                                    </a>
                                </p>
                            </div>
                        </form>
                    </div>

                    <div class="card-footer text-center">
                        <small class="text-muted">
                            <i class="fas fa-shield-alt me-1"></i>
                            Tus datos están protegidos con encriptación SSL
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('registerForm');
            const submitBtn = document.getElementById('submitBtn');
            const spinner = document.getElementById('spinner');
            const btnContent = submitBtn.querySelector('.btn-content');
            const loadingText = submitBtn.querySelector('.loading-text');
            const successAlert = document.getElementById('successAlert');
            const errorAlert = document.getElementById('errorAlert');
            const errorMessage = document.getElementById('errorMessage');

            // Campos del formulario
            const fields = {
                nombre: document.getElementById('nombre'),
                primerApellido: document.getElementById('primerApellido'),
                segundoApellido: document.getElementById('segundoApellido'),
                telefono: document.getElementById('telefono'),
                correo: document.getElementById('correo'),
                password: document.getElementById('password'),
                confirmPassword: document.getElementById('confirmPassword'),
                terms: document.getElementById('terms')
            };

            // Auto-focus en el primer campo
            fields.nombre.focus();

            // Validación en tiempo real
            Object.keys(fields).forEach(fieldName => {
                const field = fields[fieldName];
                if (field && fieldName !== 'terms') {
                    field.addEventListener('input', function() {
                        validateField(fieldName);
                    });
                    field.addEventListener('blur', function() {
                        validateField(fieldName);
                    });
                }
            });

            // Validación especial para términos
            fields.terms.addEventListener('change', function() {
                validateField('terms');
            });

            // Toggle password visibility
            document.querySelectorAll('.toggle-password').forEach(toggle => {
                toggle.addEventListener('click', function() {
                    const input = this.parentElement.querySelector('input');
                    const type = input.getAttribute('type') === 'password' ? 'text' : 'password';
                    input.setAttribute('type', type);
                    this.classList.toggle('fa-eye');
                    this.classList.toggle('fa-eye-slash');
                });
            });

            // Medidor de fuerza de contraseña
            fields.password.addEventListener('input', function() {
                updatePasswordStrength(this.value);
            });

            function updatePasswordStrength(password) {
                const strengthBar = document.getElementById('strengthBar');
                const strengthText = document.getElementById('strengthText');

                let strength = 0;
                let feedback = [];

                if (password.length >= 8) strength += 25;
                else feedback.push('mínimo 8 caracteres');

                if (/[a-z]/.test(password)) strength += 25;
                else feedback.push('minúsculas');

                if (/[A-Z]/.test(password)) strength += 25;
                else feedback.push('mayúsculas');

                if (/[0-9]/.test(password)) strength += 25;
                else feedback.push('números');

                // Actualizar barra
                strengthBar.style.width = strength + '%';
                strengthBar.className = 'strength-bar';

                if (strength <= 25) {
                    strengthBar.classList.add('strength-weak');
                    strengthText.textContent = 'Débil - Necesita: ' + feedback.join(', ');
                    strengthText.className = 'text-danger';
                } else if (strength <= 50) {
                    strengthBar.classList.add('strength-fair');
                    strengthText.textContent = 'Regular - Necesita: ' + feedback.join(', ');
                    strengthText.className = 'text-warning';
                } else if (strength <= 75) {
                    strengthBar.classList.add('strength-good');
                    strengthText.textContent = 'Buena - Necesita: ' + feedback.join(', ');
                    strengthText.className = 'text-info';
                } else {
                    strengthBar.classList.add('strength-strong');
                    strengthText.textContent = '¡Excelente contraseña!';
                    strengthText.className = 'text-success';
                }
            }

            function validateField(fieldName) {
                const field = fields[fieldName];
                let isValid = true;

                field.classList.remove('is-valid', 'is-invalid');

                switch (fieldName) {
                    case 'nombre':
                    case 'primerApellido':
                    case 'segundoApellido':
                        isValid = field.value.trim().length >= 2;
                        break;

                    case 'telefono':
                        const phoneRegex = /^[0-9]{4}-?[0-9]{4}$/;
                        isValid = phoneRegex.test(field.value.replace(/\s/g, ''));
                        // Formatear teléfono automáticamente
                        if (field.value.length === 8 && !field.value.includes('-')) {
                            field.value = field.value.substr(0, 4) + '-' + field.value.substr(4);
                        }
                        break;

                    case 'correo':
                        const emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;
                        isValid = emailRegex.test(field.value);
                        break;

                    case 'password':
                        isValid = field.value.length >= 8;
                        break;

                    case 'confirmPassword':
                        isValid = field.value === fields.password.value && field.value.length >= 8;
                        break;

                    case 'terms':
                        isValid = field.checked;
                        break;
                }

                if (field.value.trim() !== '' || fieldName === 'terms') {
                    if (isValid) {
                        field.classList.add('is-valid');
                    } else {
                        field.classList.add('is-invalid');
                    }
                }

                return isValid;
            }

            // Manejo del envío del formulario
            form.addEventListener('submit', function(e) {
                e.preventDefault();

                // Ocultar alertas previas
                successAlert.classList.add('d-none');
                errorAlert.classList.add('d-none');

                // Validar todos los campos
                let allValid = true;
                Object.keys(fields).forEach(fieldName => {
                    if (!validateField(fieldName)) {
                        allValid = false;
                    }
                });

                if (!allValid) {
                    showError('Por favor, corrige los errores en el formulario.');
                    // Hacer focus en el primer campo inválido
                    const firstInvalid = form.querySelector('.is-invalid');
                    if (firstInvalid) firstInvalid.focus();
                    return;
                }

                // Mostrar estado de carga
                showLoading(true);

                // Simular registro 
                setTimeout(() => {
                    if (Math.random() > 0.1) {
                        showSuccess();
                        form.reset();
                        Object.keys(fields).forEach(fieldName => {
                            fields[fieldName].classList.remove('is-valid', 'is-invalid');
                        });
                        document.getElementById('strengthBar').style.width = '0%';
                        document.getElementById('strengthText').textContent = 'Mínimo 8 caracteres';
                        document.getElementById('strengthText').className = 'text-muted';
                    } else {
                        showError('Error al registrar. El correo ya está en uso.');
                    }
                    showLoading(false);
                }, 2500);
            });

            function showLoading(loading) {
                if (loading) {
                    submitBtn.disabled = true;
                    btnContent.classList.add('d-none');
                    spinner.classList.remove('d-none');
                    loadingText.classList.remove('d-none');
                    submitBtn.classList.add('pulse');
                } else {
                    submitBtn.disabled = false;
                    btnContent.classList.remove('d-none');
                    spinner.classList.add('d-none');
                    loadingText.classList.add('d-none');
                    submitBtn.classList.remove('pulse');
                }
            }

            function showSuccess() {
                successAlert.classList.remove('d-none');
                successAlert.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
            }

            function showError(message) {
                errorMessage.textContent = message;
                errorAlert.classList.remove('d-none');
                errorAlert.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
            }

            // Auto-close alerts
            function autoCloseAlert(alert) {
                setTimeout(() => {
                    alert.classList.add('d-none');
                }, 6000);
            }

            const observer = new MutationObserver(function(mutations) {
                mutations.forEach(function(mutation) {
                    if (mutation.type === 'attributes' && mutation.attributeName === 'class') {
                        const target = mutation.target;
                        if (!target.classList.contains('d-none') &&
                            (target.id === 'successAlert' || target.id === 'errorAlert')) {
                            autoCloseAlert(target);
                        }
                    }
                });
            });

            observer.observe(successAlert, { attributes: true });
            observer.observe(errorAlert, { attributes: true });
        });
    </script>
</body>
</html>