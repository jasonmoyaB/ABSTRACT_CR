@model Abstract_CR.Controllers.ResetPasswordViewModel
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewBag.Title = "Restablecer Contraseña";
}
<link rel="icon" type="image/x-icon" href="~/assets/img/LOGO01.jfif" />
<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="~/assets/img/Dieta01.jpeg"
                                 alt="restablecer contraseña" class="img-fluid" style="border-radius: 1rem 0 0 1rem; object-fit: cover; height: 100%;" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black position-relative">

                                <!-- Botón Volver -->
                                <div class="position-absolute" style="top: 20px; left: 20px;">
                                    <a href="@Url.Action("Login", "Autenticacion")" class="btn" style="background-color: #2F170F; border-color: #2F170F; color: white;" title="Volver al Login">
                                        ←
                                    </a>
                                </div>

                                <form asp-action="ResetPassword" method="post">
                                    @Html.AntiForgeryToken()
                                    <input asp-for="Token" type="hidden" />
                                    
                                    <div class="text-center mb-4">
                                        <div class="h1 fw-bold mt-2">Abstract</div>
                                    </div>

                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">
                                        Restablecer contraseña
                                    </h5>

                                    <div class="form-outline mb-4">
                                        <input asp-for="Email" type="email" id="Email" class="form-control form-control-lg" readonly />
                                        <label asp-for="Email" class="form-label">Correo electrónico</label>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input asp-for="Password" type="password" id="Password" class="form-control form-control-lg" placeholder=" " />
                                        <label asp-for="Password" class="form-label">Nueva contraseña</label>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input asp-for="ConfirmPassword" type="password" id="ConfirmPassword" class="form-control form-control-lg" placeholder=" " />
                                        <label asp-for="ConfirmPassword" class="form-label">Confirmar nueva contraseña</label>
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>

                                    <div class="pt-1 mb-4">
                                        <button class="btn btn-dark btn-lg btn-block" type="submit">
                                            Restablecer contraseña
                                        </button>
                                    </div>

                                    <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                        ¿Recordaste tu contraseña?
                                        <a href="@Url.Action("Login","Autenticacion")" style="color: #393f81;">Inicia sesión aquí</a>
                                    </p>

                                    <div class="alert alert-info">
                                        <small>
                                            <i class="fas fa-info-circle"></i>
                                            Tu nueva contraseña debe tener al menos 6 caracteres.
                                        </small>
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
