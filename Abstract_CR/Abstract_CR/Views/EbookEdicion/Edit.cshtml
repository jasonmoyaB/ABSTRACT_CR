@model Abstract_CR.Models.EbookEdicion
@{
    ViewData["Title"] = "Editar Escenario";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">
        <i class="fa-solid fa-pen-to-square text-primary me-2"></i>
        Editar Escenario del eBook
    </h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="EbookEdicionID" />

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="TituloHU" class="form-label"></label>
                <input asp-for="TituloHU" class="form-control" />
                <span asp-validation-for="TituloHU" class="text-danger"></span>
            </div>

            <div class="col-md-3 mb-3">
                <label asp-for="Escenario" class="form-label"></label>
                <input asp-for="Escenario" class="form-control" type="number" min="1" />
                <span asp-validation-for="Escenario" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="CriterioAceptacion" class="form-label"></label>
            <input asp-for="CriterioAceptacion" class="form-control" />
            <span asp-validation-for="CriterioAceptacion" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Contexto" class="form-label"></label>
            <textarea asp-for="Contexto" class="form-control" rows="2"></textarea>
            <span asp-validation-for="Contexto" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Evento" class="form-label"></label>
            <textarea asp-for="Evento" class="form-control" rows="2"></textarea>
            <span asp-validation-for="Evento" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Resultado" class="form-label"></label>
            <textarea asp-for="Resultado" class="form-control" rows="2"></textarea>
            <span asp-validation-for="Resultado" class="text-danger"></span>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">
                <i class="fa-solid fa-floppy-disk"></i> Guardar
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fa-solid fa-rotate-left"></i> Volver
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
