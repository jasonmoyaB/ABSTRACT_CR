@model IEnumerable<Abstract_CR.Models.EbookEdicion>
@{
    ViewData["Title"] = "Editar eBook";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">
        <i class="fa-solid fa-book-open text-primary me-2"></i>
        Contenido del eBook
    </h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="mb-3 text-end">
        <a asp-action="Create" class="btn btn-success">
            <i class="fa-solid fa-plus"></i> Nuevo Escenario
        </a>
    </div>

    <table class="table table-hover table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>Escenario</th>
                <th>Criterio de Aceptación</th>
                <th>Contexto</th>
                <th>Evento</th>
                <th>Resultado</th>
                <th style="width:160px;">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="6" class="text-center text-muted">No hay registros aún.</td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Escenario</td>
                        <td>@item.CriterioAceptacion</td>
                        <td>@item.Contexto</td>
                        <td>@item.Evento</td>
                        <td>@item.Resultado</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.EbookEdicionID" class="btn btn-sm btn-primary me-1">
                                <i class="fa-solid fa-pen-to-square"></i> Editar
                            </a>
                            <form asp-action="Delete" method="post" class="d-inline"
                                  onsubmit="return confirm('¿Seguro que deseas eliminar este escenario?');">
                                <input type="hidden" name="id" value="@item.EbookEdicionID" />
                                <button type="submit" class="btn btn-sm btn-danger">
                                    <i class="fa-solid fa-trash"></i> Eliminar
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
