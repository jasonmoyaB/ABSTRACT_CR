@{
    ViewData["Title"] = "Subir Archivo del Ebook";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">Subir Archivo del Ebook</h1>
                <div class="text-end">
                    <span class="text-muted">Panel de Administración</span>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Información del Ebook Actual -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-book me-2"></i>
                        Estado Actual del Ebook
                    </h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.EbookActual != null)
                    {
                        var ebook = ViewBag.EbookActual as EbookEdicion;
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Archivo actual:</strong> 
                                    @if (!string.IsNullOrEmpty(ebook.NombreArchivo))
                                    {
                                        <span class="text-success">@ebook.NombreArchivo</span>
                                    }
                                    else
                                    {
                                        <span class="text-danger">No hay archivo</span>
                                    }
                                </p>
                                <p><strong>Tamaño:</strong> @ebook.TamañoFormateado</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Última subida:</strong> 
                                    @if (ebook.FechaSubida.HasValue)
                                    {
                                        @ebook.FechaSubida.Value.ToString("dd/MM/yyyy HH:mm")
                                    }
                                    else
                                    {
                                        <span class="text-muted">Nunca</span>
                                    }
                                </p>
                                <p><strong>Estado descarga:</strong> 
                                    @if (ebook.PermitirDescarga)
                                    {
                                        <span class="badge bg-success">Habilitada</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Deshabilitada</span>
                                    }
                                </p>
                            </div>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No hay información del ebook disponible.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Formulario de Subida -->
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-upload me-2"></i>
                        Subir Nuevo Archivo PDF
                    </h5>
                </div>
                <div class="card-body">
                    <form id="formSubirArchivo" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="archivo" class="form-label">Seleccionar archivo PDF</label>
                            <input type="file" class="form-control" id="archivo" name="archivo" accept=".pdf" required>
                            <div class="form-text">
                                Solo se permiten archivos PDF. Tamaño máximo: 50MB.
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary" id="btnSubir">
                                <i class="fas fa-upload me-2"></i>
                                Subir Archivo
                            </button>
                            <button type="button" class="btn btn-secondary ms-2" onclick="location.reload()">
                                <i class="fas fa-refresh me-2"></i>
                                Actualizar
                            </button>
                        </div>
                    </form>

                    <div id="progressContainer" class="mt-3" style="display: none;">
                        <div class="progress">
                            <div class="progress-bar" role="progressbar" style="width: 0%"></div>
                        </div>
                        <small class="text-muted">Subiendo archivo...</small>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        Información Importante
                    </h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-2"></i>
                            Solo archivos PDF
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-2"></i>
                            Tamaño máximo: 50MB
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-2"></i>
                            Se reemplaza el archivo anterior
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-2"></i>
                            Los usuarios podrán descargarlo inmediatamente
                        </li>
                    </ul>
                </div>
            </div>

            <div class="card shadow-sm mt-3">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-cog me-2"></i>
                        Acciones Rápidas
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Index", "Ebooks")" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-eye me-2"></i>
                            Ver Vista de Usuario
                        </a>
                        <a href="@Url.Action("Index", "Usuarios")" class="btn btn-outline-secondary btn-sm">
                            <i class="fas fa-users me-2"></i>
                            Gestionar Usuarios
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('formSubirArchivo').addEventListener('submit', function(e) {
            e.preventDefault();
            
            var formData = new FormData();
            var archivo = document.getElementById('archivo').files[0];
            
            if (!archivo) {
                mostrarMensaje('error', 'Por favor selecciona un archivo');
                return;
            }
            
            // Verificar que es PDF
            if (!archivo.type.includes('pdf')) {
                mostrarMensaje('error', 'Solo se permiten archivos PDF');
                return;
            }
            
            // Verificar tamaño (50MB)
            if (archivo.size > 50 * 1024 * 1024) {
                mostrarMensaje('error', 'El archivo es demasiado grande. Máximo 50MB');
                return;
            }
            
            formData.append('archivo', archivo);
            
            // Mostrar progress
            document.getElementById('progressContainer').style.display = 'block';
            document.getElementById('btnSubir').disabled = true;
            
            fetch('@Url.Action("SubirArchivo", "Ebooks")', {
                method: 'POST',
                body: formData,
                headers: {
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                }
            })
            .then(response => response.json())
            .then(data => {
                document.getElementById('progressContainer').style.display = 'none';
                document.getElementById('btnSubir').disabled = false;
                
                if (data.success) {
                    mostrarMensaje('success', data.message);
                    setTimeout(function() {
                        location.reload();
                    }, 2000);
                } else {
                    mostrarMensaje('error', data.message);
                }
            })
            .catch(error => {
                document.getElementById('progressContainer').style.display = 'none';
                document.getElementById('btnSubir').disabled = false;
                console.error('Error:', error);
                mostrarMensaje('error', 'Error al subir el archivo');
            });
        });

        function mostrarMensaje(tipo, mensaje) {
            var alertClass = tipo === 'success' ? 'alert-success' : 'alert-danger';
            var icon = tipo === 'success' ? 'fa-check-circle' : 'fa-exclamation-circle';
            
            var alertHtml = `
                <div class="alert ${alertClass} alert-dismissible fade show" role="alert">
                    <i class="fas ${icon} me-2"></i>
                    ${mensaje}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            `;
            
            var container = document.querySelector('.container-fluid');
            container.insertAdjacentHTML('afterbegin', alertHtml);
            
            setTimeout(function() {
                var alerts = document.querySelectorAll('.alert');
                alerts.forEach(function(alert) {
                    alert.style.opacity = '0';
                    setTimeout(function() {
                        alert.remove();
                    }, 300);
                });
            }, 5000);
        }
    </script>
}
