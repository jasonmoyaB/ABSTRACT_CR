@{
    ViewData["Title"] = "Nueva Contraseña";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-lg border-0">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <img src="~/assets/img/logo.png" alt="Abstract" class="mb-3" style="width: 80px; height: 80px;">
                    <h2 class="fw-bold text-dark">Nueva Contraseña</h2>
                    <p class="text-muted">Ingresa tu nueva contraseña</p>
                    @if (ViewBag.Email != null)
                    {
                        <small class="text-muted">Para: @ViewBag.Email</small>
                    }
                </div>

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @TempData["Error"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <form method="post">
                    <input type="hidden" name="token" value="@ViewBag.Token" />
                    
                    <div class="mb-3">
                        <label for="password" class="form-label">Nueva Contraseña</label>
                        <input type="password" class="form-control form-control-lg" id="password" name="password" 
                               placeholder="Mínimo 6 caracteres" required minlength="6">
                    </div>

                    <div class="mb-3">
                        <label for="confirmPassword" class="form-label">Confirmar Contraseña</label>
                        <input type="password" class="form-control form-control-lg" id="confirmPassword" name="confirmPassword" 
                               placeholder="Repite tu contraseña" required minlength="6">
                    </div>

                    <div class="d-grid gap-2 mb-3">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="fas fa-key me-2"></i>Actualizar Contraseña
                        </button>
                    </div>
                </form>

                <div class="text-center">
                    <a href="@Url.Action("RequestReset")" class="text-decoration-none">
                        <i class="fas fa-arrow-left me-1"></i>Solicitar Nuevo Enlace
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const password = document.getElementById('password');
    const confirmPassword = document.getElementById('confirmPassword');
    
    function validatePassword() {
        if (password.value !== confirmPassword.value) {
            confirmPassword.setCustomValidity('Las contraseñas no coinciden');
        } else {
            confirmPassword.setCustomValidity('');
        }
    }
    
    password.addEventListener('change', validatePassword);
    confirmPassword.addEventListener('keyup', validatePassword);
});
</script>
