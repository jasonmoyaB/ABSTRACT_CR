@model Abstract_CR.Models.ViewModels.PedidoConfirmacionViewModel
@{
    ViewBag.Title = "Pedido confirmado";
}

<section class="page-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm border-0">
                    <div class="card-body text-center p-5">
                        <div class="mb-4 text-success">
                            <i class="fas fa-check-circle fa-3x"></i>
                        </div>
                        <h2 class="section-heading-upper text-primary mb-3">¡Pedido reenviado con éxito!</h2>
                        <p class="text-muted mb-4">
                            Registramos tu nuevo pedido y te enviaremos una notificación cuando esté en camino.
                        </p>
                        <div class="row text-start mb-4">
                            <div class="col-md-6">
                                <p class="mb-1"><strong>Número de pedido:</strong> @Model.PedidoId</p>
                                <p class="mb-1"><strong>Fecha de creación:</strong> @Model.FechaPedido.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</p>
                            </div>
                            <div class="col-md-6">
                                <p class="mb-1"><strong>Entrega estimada:</strong> @(Model.FechaEntrega.HasValue ? Model.FechaEntrega.Value.ToString("dd/MM/yyyy") : "Pendiente de confirmar")</p>
                                <p class="mb-1"><strong>Dirección:</strong> @Model.DireccionEntrega</p>
                            </div>
                        </div>
                        <div class="alert alert-light border">
                            <p class="mb-1"><strong>Total:</strong> $ @Model.Total.ToString("N2")</p>
                            <p class="mb-0"><strong>Productos:</strong> @Model.CantidadProductos</p>
                        </div>
                        <div class="mt-4">
                            <a asp-action="Historial" class="btn btn-primary me-2"><i class="fas fa-history me-1"></i> Ver historial</a>
                            <a asp-controller="Home" asp-action="MenuSemanal" class="btn btn-outline-secondary"><i class="fas fa-home me-1"></i> Ir a mi menú</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
