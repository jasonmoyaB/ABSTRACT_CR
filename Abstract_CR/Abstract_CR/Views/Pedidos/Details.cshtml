@model Abstract_CR.Services.Pedidos.PedidoDto
@using Abstract_CR.Models
@using System.Globalization
@using System.Linq
@{
    ViewData["Title"] = $"Pedido #{Model.PedidoId}";

    string GetEstadoBadgeClass(EstadoPedido estado) => estado switch
    {
        EstadoPedido.Pendiente => "bg-warning text-dark",
        EstadoPedido.Procesando => "bg-info text-dark",
        EstadoPedido.Enviado => "bg-primary",
        EstadoPedido.Entregado => "bg-success",
        EstadoPedido.Cancelado => "bg-danger",
        _ => "bg-secondary"
    };
}

<section class="page-section">
    <div class="container">
        <div class="row">
            <div class="col-xl-9 mx-auto">
                <div class="bg-faded rounded shadow-sm p-4">
                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mb-4">
                        <div>
                            <h2 class="section-heading mb-0">
                                <span class="section-heading-upper">Detalle del Pedido</span>
                                <span class="section-heading-lower">#@Model.PedidoId</span>
                            </h2>
                            <p class="text-muted mb-0">Creado el @Model.FechaPedido.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                        <div class="text-md-end">
                            <span class="badge @GetEstadoBadgeClass(Model.Estado) text-uppercase fs-6">@Model.Estado</span>
                        </div>
                    </div>

                    <div class="row g-4 mb-4">
                        <div class="col-md-6">
                            <div class="border rounded-3 p-3 h-100 bg-white">
                                <h3 class="h6 text-uppercase text-primary fw-semibold">Información del Pago</h3>
                                <dl class="row mb-0">
                                    <dt class="col-5 text-muted">Método</dt>
                                    <dd class="col-7">@Model.MetodoPago</dd>
                                    <dt class="col-5 text-muted">Total</dt>
                                    <dd class="col-7 fw-semibold">@Model.Total.ToString("C", CultureInfo.CurrentCulture)</dd>
                                    <dt class="col-5 text-muted">Dirección de envío</dt>
                                    <dd class="col-7">@(string.IsNullOrWhiteSpace(Model.DireccionEnvio) ? "No especificada" : Model.DireccionEnvio)</dd>
                                </dl>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="border rounded-3 p-3 h-100 bg-white">
                                <h3 class="h6 text-uppercase text-primary fw-semibold">Estado</h3>
                                <p class="mb-1">Estado actual del pedido:</p>
                                <p class="fw-semibold mb-0">@Model.Estado</p>
                            </div>
                        </div>
                    </div>

                    <div>
                        <h3 class="h5 text-uppercase text-primary">Ítems</h3>
                        <div class="table-responsive">
                            <table class="table table-striped align-middle">
                                <thead class="table-light text-uppercase small">
                                    <tr>
                                        <th scope="col">Producto</th>
                                        <th scope="col" class="text-center">Cantidad</th>
                                        <th scope="col" class="text-end">Precio Unitario</th>
                                        <th scope="col" class="text-end">Subtotal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Detalles != null && Model.Detalles.Any())
                                    {
                                        foreach (var detalle in Model.Detalles)
                                        {
                                            <tr>
                                                <td>@detalle.Descripcion</td>
                                                <td class="text-center">@detalle.Cantidad</td>
                                                <td class="text-end">@detalle.PrecioUnitario.ToString("C", CultureInfo.CurrentCulture)</td>
                                                <td class="text-end">@detalle.Subtotal.ToString("C", CultureInfo.CurrentCulture)</td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="4" class="text-center text-muted py-4">No se registraron ítems para este pedido.</td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th colspan="3" class="text-end text-uppercase">Total</th>
                                        <th class="text-end">@Model.Total.ToString("C", CultureInfo.CurrentCulture)</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>

                    <div class="text-end mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Volver al listado
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
