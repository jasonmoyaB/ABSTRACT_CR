@model IEnumerable<Abstract_CR.Services.Pedidos.PedidoDto>
@using Abstract_CR.Models
@using System.Globalization
@using System.Linq
@{
    ViewData["Title"] = "Pedidos";

    string GetEstadoBadgeClass(EstadoPedido estado) => estado switch
    {
        EstadoPedido.Pendiente => "bg-warning text-dark",
        EstadoPedido.Procesando => "bg-info text-dark",
        EstadoPedido.Enviado => "bg-primary",
        EstadoPedido.Entregado => "bg-success",
        EstadoPedido.Cancelado => "bg-danger",
        _ => "bg-secondary"
    };
}

<section class="page-section">
    <div class="container">
        <div class="d-flex flex-column flex-lg-row align-items-lg-center justify-content-between gap-3 mb-4">
            <div>
                <h2 class="section-heading mb-0">
                    <span class="section-heading-upper">Gestión de Pedidos</span>
                    <span class="section-heading-lower">Listado</span>
                </h2>
            </div>
            <div class="text-lg-end">
                <a asp-action="Create" class="btn btn-primary text-uppercase">
                    <i class="fas fa-plus me-1"></i>
                    Nuevo Pedido
                </a>
            </div>
        </div>

        <div class="table-responsive bg-faded rounded shadow-sm">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-dark text-uppercase small">
                    <tr>
                        <th scope="col">Pedido</th>
                        <th scope="col">Fecha</th>
                        <th scope="col">Estado</th>
                        <th scope="col">Método de Pago</th>
                        <th scope="col" class="text-end">Total</th>
                        <th scope="col" class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var pedido in Model)
                        {
                            <tr>
                                <td class="fw-semibold">#@pedido.PedidoId</td>
                                <td>@pedido.FechaPedido.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    <span class="badge @GetEstadoBadgeClass(pedido.Estado) text-uppercase">@pedido.Estado</span>
                                </td>
                                <td>@pedido.MetodoPago</td>
                                <td class="text-end fw-semibold">@pedido.Total.ToString("C", CultureInfo.CurrentCulture)</td>
                                <td class="text-end">
                                    <a asp-action="Details" asp-route-id="@pedido.PedidoId" class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-eye"></i> Detalles
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-4 text-muted">
                                No hay pedidos registrados por el momento.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
