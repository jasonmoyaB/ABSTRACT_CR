@model Abstract_CR.Models.PlanNutricional

@{
    ViewData["Title"] = "Eliminar Plan Nutricional";
}

<link rel="icon" type="image/x-icon" href="~/assets/img/LOGO01.jfif" />

<section class="page-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="position-relative mb-5">
                    <a href="@Url.Action("Index", "PlanNutricional")" class="btn position-absolute" style="left: 0; top: 0; background-color: #2F170F; border-color: #2F170F; color: white;" title="Volver a Mis Planes">
                        <i class="fas fa-arrow-left"></i>
                    </a>
                    <div class="text-center">
                        <h2 class="section-heading">
                            <span class="section-heading-upper" style="color:#e6a756">Eliminar</span>
                            <span class="section-heading-lower" style="color:#f6e1c5">Plan Nutricional</span>
                        </h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm border-danger">
                    <div class="card-header bg-danger text-white">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
                            <div>
                                <h4 class="mb-0">¡Confirmar Eliminación!</h4>
                                <small>Esta acción no se puede deshacer</small>
                            </div>
                        </div>
                    </div>

                    <div class="card-body">
                        <div class="alert alert-warning" role="alert">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>¿Estás seguro de que deseas eliminar este plan nutricional?</strong>
                            <br>
                            Esta acción eliminará permanentemente el plan y todos sus datos asociados.
                        </div>

                        <div class="row">
                            <div class="col-md-8">
                                <h5 class="mb-3">Información del Plan a Eliminar:</h5>

                                <div class="card bg-light mb-3">
                                    <div class="card-body">
                                        <h6 class="card-title">
                                            <i class="fas fa-clipboard-list me-2"></i>
                                            @Model.Nombre
                                        </h6>

                                        @if (!string.IsNullOrEmpty(Model.Descripcion))
                                        {
                                            <p class="card-text">@Model.Descripcion</p>
                                        }

                                        <div class="row mt-3">
                                            <div class="col-6">
                                                <small class="text-muted d-block">Fecha de Carga</small>
                                                <strong>@Model.FechaCarga.ToString("dd/MM/yyyy")</strong>
                                            </div>
                                            @if (Model.FechaVencimiento.HasValue)
                                            {
                                                <div class="col-6">
                                                    <small class="text-muted d-block">Fecha de Vencimiento</small>
                                                    <strong>@Model.FechaVencimiento.Value.ToString("dd/MM/yyyy")</strong>
                                                </div>
                                            }
                                        </div>

                                        @if (!string.IsNullOrEmpty(Model.DocumentoURL))
                                        {
                                            <div class="mt-3">
                                                <small class="text-muted d-block">Documento Adjunto</small>
                                                <i class="fas fa-file text-primary me-2"></i>
                                                <span>Archivo adjunto será eliminado</span>
                                            </div>
                                        }
                                    </div>
                                </div>

                                <div class="alert alert-info" role="alert">
                                    <i class="fas fa-lightbulb me-2"></i>
                                    <strong>Tip:</strong> Si no estás seguro, puedes pausar el plan en lugar de eliminarlo.
                                    Podrás reactivarlo más tarde desde los detalles del plan.
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="card border-warning">
                                    <div class="card-header bg-warning text-dark">
                                        <h6 class="mb-0">
                                            <i class="fas fa-exclamation me-2"></i>
                                            Lo que se eliminará:
                                        </h6>
                                    </div>
                                    <div class="card-body">
                                        <ul class="list-unstyled mb-0">
                                            <li class="mb-2">
                                                <i class="fas fa-check text-danger me-2"></i>
                                                Información del plan
                                            </li>
                                            <li class="mb-2">
                                                <i class="fas fa-check text-danger me-2"></i>
                                                Descripción y fechas
                                            </li>
                                            @if (!string.IsNullOrEmpty(Model.DocumentoURL))
                                            {
                                                <li class="mb-2">
                                                    <i class="fas fa-check text-danger me-2"></i>
                                                    Archivo adjunto
                                                </li>
                                            }
                                            <li class="mb-2">
                                                <i class="fas fa-check text-danger me-2"></i>
                                                Menús asociados
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer bg-light">
                        <form asp-action="Delete" method="post" class="d-inline">
                            <input type="hidden" asp-for="PlanID" />

                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <a href="@Url.Action("Details", "PlanNutricional", new { id = Model.PlanID })"
                                       class="btn btn-outline-secondary">
                                        <i class="fas fa-eye me-2"></i>
                                        Ver Detalles
                                    </a>

                                    <a href="@Url.Action("Index", "PlanNutricional")"
                                       class="btn btn-secondary ms-2">
                                        <i class="fas fa-arrow-left me-2"></i>
                                        Cancelar
                                    </a>
                                </div>

                                <button type="submit" class="btn btn-danger" id="btnConfirmarEliminacion">
                                    <i class="fas fa-trash me-2"></i>
                                    Confirmar Eliminación
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        document.getElementById('btnConfirmarEliminacion').addEventListener('click', function(e) {
            if (!confirm('¿Estás completamente seguro? Esta acción NO se puede deshacer.')) {
                e.preventDefault();
                return false;
            }

            // Cambiar texto del botón para mostrar que se está procesando
            this.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Eliminando...';
            this.disabled = true;

            return true;
        });

        // Validación adicional con checkbox de confirmación
        function mostrarConfirmacionAdicional() {
            const modal = `
                <div class="modal fade" id="confirmModal" tabindex="-1">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header bg-danger text-white">
                                <h5 class="modal-title">
                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                    Confirmación Final
                                </h5>
                            </div>
                            <div class="modal-body">
                                <p><strong>¿Estás absolutamente seguro?</strong></p>
                                <p>Esta acción eliminará permanentemente:</p>
                                <ul>
                                    <li>El plan nutricional "@Model.Nombre"</li>
                                    <li>Todos los datos asociados</li>
                                    <li>Los archivos adjuntos</li>
                                </ul>
                                <div class="form-check mt-3">
                                    <input class="form-check-input" type="checkbox" id="confirmarEliminacion">
                                    <label class="form-check-label" for="confirmarEliminacion">
                                        He leído y entiendo que esta acción no se puede deshacer
                                    </label>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                    <i class="fas fa-times me-2"></i>Cancelar
                                </button>
                                <button type="button" class="btn btn-danger" id="btnConfirmarFinal" disabled>
                                    <i class="fas fa-trash me-2"></i>Eliminar Definitivamente
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            `;

            if (!document.getElementById('confirmModal')) {
                document.body.insertAdjacentHTML('beforeend', modal);

                // Habilitar botón solo cuando se marca el checkbox
                document.getElementById('confirmarEliminacion').addEventListener('change', function() {
                    document.getElementById('btnConfirmarFinal').disabled = !this.checked;
                });

                // Acción final de eliminación
                document.getElementById('btnConfirmarFinal').addEventListener('click', function() {
                    document.querySelector('form[asp-action="Delete"]').submit();
                });
            }

            // Mostrar modal
            new bootstrap.Modal(document.getElementById('confirmModal')).show();
        }
    </script>
}