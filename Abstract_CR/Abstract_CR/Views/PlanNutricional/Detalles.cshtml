@model Abstract_CR.Models.PlanNutricional

@{
    ViewData["Title"] = "Detalles del Plan";
}

<section class="page-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="position-relative mb-5">
                    <a href="@Url.Action("Index", "PlanNutricional")" class="btn position-absolute" style="left: 0; top: 0; background-color: #2F170F; border-color: #2F170F; color: white;" title="Volver a Mis Planes">
                        <i class="fas fa-arrow-left"></i>
                    </a>
                    <div class="text-center">
                        <h2 class="section-heading">
                            <span class="section-heading-upper" style="color:#e6a756 ">Detalles del</span>
                            <span class="section-heading-lower" style="color:#f6e1c5">Plan Nutricional</span>
                        </h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-8">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-faded">
                        <h5 class="mb-0">
                            <i class="fas fa-clipboard-list me-2"></i>
                            Información General
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <h6 class="text-muted">Nombre del Plan</h6>
                                <p class="mb-0">@Model.Nombre</p>
                            </div>
                            <div class="col-md-6">
                                <h6 class="text-muted">Tipo de Plan</h6>
                                <span class="badge bg-primary">@Model.TipoPlan</span>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Descripcion))
                        {
                            <div class="mb-3">
                                <h6 class="text-muted">Descripción</h6>
                                <p class="mb-0">@Model.Descripcion</p>
                            </div>
                        }

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <h6 class="text-muted">Fecha de Inicio</h6>
                                <p class="mb-0">@Model.FechaInicio.ToString("dd/MM/yyyy")</p>
                            </div>
                            <div class="col-md-6">
                                <h6 class="text-muted">Fecha de Vencimiento</h6>
                                <p class="mb-0 @(Model.FechaVencimiento <= DateTime.Now.AddDays(7) ? "text-danger" : "")">
                                    @Model.FechaVencimiento.ToString("dd/MM/yyyy")
                                </p>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <h6 class="text-muted">Estado</h6>
                                <span class="badge bg-@(Model.Estado == "Activo" ? "success" : "warning")">@Model.Estado</span>
                            </div>
                            <div class="col-md-6">
                                <h6 class="text-muted">Días Restantes</h6>
                                <p class="mb-0 @(Model.FechaVencimiento <= DateTime.Now.AddDays(7) ? "text-danger" : "")">
                                    @((Model.FechaVencimiento - DateTime.Now).Days) días
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-faded">
                        <h5 class="mb-0">
                            <i class="fas fa-chart-pie me-2"></i>
                            Información Nutricional
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-md-3">
                                <div class="border rounded p-3 mb-3">
                                    <i class="fas fa-fire fa-2x text-danger mb-2"></i>
                                    <h4 class="mb-1">@(Model.CaloriasDiarias?.ToString() ?? "N/A")</h4>
                                    <small class="text-muted">Calorías Diarias</small>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="border rounded p-3 mb-3">
                                    <i class="fas fa-drumstick-bite fa-2x text-primary mb-2"></i>
                                    <h4 class="mb-1">@(Model.Proteinas?.ToString() ?? "N/A")g</h4>
                                    <small class="text-muted">Proteínas</small>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="border rounded p-3 mb-3">
                                    <i class="fas fa-bread-slice fa-2x text-warning mb-2"></i>
                                    <h4 class="mb-1">@(Model.Carbohidratos?.ToString() ?? "N/A")g</h4>
                                    <small class="text-muted">Carbohidratos</small>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="border rounded p-3 mb-3">
                                    <i class="fas fa-cheese fa-2x text-success mb-2"></i>
                                    <h4 class="mb-1">@(Model.Grasas?.ToString() ?? "N/A")g</h4>
                                    <small class="text-muted">Grasas</small>
                                </div>
                            </div>
                        </div>

                        @if (Model.Fibra.HasValue)
                        {
                            <div class="row">
                                <div class="col-md-6 offset-md-3">
                                    <div class="border rounded p-3 text-center">
                                        <i class="fas fa-seedling fa-2x text-success mb-2"></i>
                                        <h4 class="mb-1">@Model.Fibra.Value.ToString()g</h4>
                                        <small class="text-muted">Fibra</small>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.RutaArchivo))
                {
                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-faded">
                            <h5 class="mb-0">
                                <i class="fas fa-file me-2"></i>
                                Archivo del Plan
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-file-pdf fa-2x text-danger me-3"></i>
                                <div class="flex-grow-1">
                                    <h6 class="mb-1">Plan Nutricional</h6>
                                    <small class="text-muted">Archivo adjunto al plan</small>
                                </div>
                                <a href="#" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-download me-2"></i>
                                    Descargar
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="col-lg-4">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-faded">
                        <h5 class="mb-0">
                            <i class="fas fa-tasks me-2"></i>
                            Acciones Rápidas
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a href="@Url.Action("Menus", "PlanNutricional", new { planId = Model.Id })" class="btn btn-primary">
                                <i class="fas fa-utensils me-2"></i>
                                Ver Menús
                            </a>
                            <a href="@Url.Action("GenerarMenus", "PlanNutricional", new { planId = Model.Id })" class="btn btn-outline-primary">
                                <i class="fas fa-magic me-2"></i>
                                Generar Menús
                            </a>
                            <a href="@Url.Action("Evaluar", "PlanNutricional", new { planId = Model.Id })" class="btn btn-outline-warning">
                                <i class="fas fa-star me-2"></i>
                                Evaluar Plan
                            </a>
                            <button class="btn btn-outline-secondary">
                                <i class="fas fa-edit me-2"></i>
                                Editar Plan
                            </button>
                        </div>
                    </div>
                </div>

                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-faded">
                        <h5 class="mb-0">
                            <i class="fas fa-chart-line me-2"></i>
                            Progreso
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <div class="d-flex justify-content-between mb-1">
                                <small>Progreso del Plan</small>
                                <small>@((int)((DateTime.Now - Model.FechaInicio).TotalDays / (Model.FechaVencimiento - Model.FechaInicio).TotalDays * 100))%</small>
                            </div>
                            <div class="progress">
                                <div class="progress-bar" role="progressbar" style="width: @((int)((DateTime.Now - Model.FechaInicio).TotalDays / (Model.FechaVencimiento - Model.FechaInicio).TotalDays * 100))%"></div>
                            </div>
                        </div>

                        <div class="row text-center">
                            <div class="col-6">
                                <h6 class="mb-1">@((DateTime.Now - Model.FechaInicio).Days)</h6>
                                <small class="text-muted">Días Completados</small>
                            </div>
                            <div class="col-6">
                                <h6 class="mb-1">@((Model.FechaVencimiento - DateTime.Now).Days)</h6>
                                <small class="text-muted">Días Restantes</small>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card shadow-sm">
                    <div class="card-header bg-faded">
                        <h5 class="mb-0">
                            <i class="fas fa-lightbulb me-2"></i>
                            Consejos
                        </h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled mb-0">
                            <li class="mb-2">
                                <i class="fas fa-check text-success me-2"></i>
                                Mantén un registro de tu progreso
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-check text-success me-2"></i>
                                Sigue las porciones recomendadas
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-check text-success me-2"></i>
                                Bebe suficiente agua
                            </li>
                            <li class="mb-0">
                                <i class="fas fa-check text-success me-2"></i>
                                Realiza actividad física regular
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section> 