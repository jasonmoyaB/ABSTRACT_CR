@model List<object>

@{
    ViewData["Title"] = "Notificaciones";
}

<section class="page-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="position-relative mb-5">
                    <a href="@Url.Action("Index", "PlanNutricional")" class="btn position-absolute" style="left: 0; top: 0; background-color: #2F170F; border-color: #2F170F; color: white;" title="Volver a Mis Planes">
                        <i class="fas fa-arrow-left"></i>
                    </a>
                    <div class="text-center">
                        <h2 class="section-heading">
                            <span class="section-heading-upper" style="color:#e6a756">Mis</span>
                            <span class="section-heading-lower" style="color:#f6e1c5">Notificaciones</span>
                        </h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-faded">
                        <h5 class="mb-0">
                            <i class="fas fa-bell me-2"></i>
                            Notificaciones del Plan
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (Model.Any())
                        {
                            <div class="list-group list-group-flush">
                                @foreach (var notificacion in Model)
                                {
                                    <div class="list-group-item border-0 px-0">
                                        <div class="d-flex align-items-start">
                                            <div class="flex-shrink-0">
                                                <div class="alert alert-warning mb-0 p-2">
                                                    <i class="fas fa-exclamation-triangle"></i>
                                                </div>
                                            </div>
                                            <div class="flex-grow-1 ms-3">
                                                <h6 class="mb-1">@notificacion.GetType().GetProperty("Tipo")?.GetValue(notificacion)</h6>
                                                <p class="mb-1">@notificacion.GetType().GetProperty("Mensaje")?.GetValue(notificacion)</p>
                                                <small class="text-muted">
                                                    <i class="fas fa-calendar me-1"></i>
                                                    @(((DateTime)notificacion.GetType().GetProperty("Fecha")?.GetValue(notificacion)).ToString("dd/MM/yyyy"))
                                                </small>
                                            </div>
                                            <div class="flex-shrink-0">
                                                <a href="@Url.Action("Detalles", "PlanNutricional", new { id = notificacion.GetType().GetProperty("PlanId")?.GetValue(notificacion) })" class="btn btn-outline-primary btn-sm">
                                                    <i class="fas fa-eye me-1"></i>
                                                    Ver Plan
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <i class="fas fa-bell-slash fa-3x text-muted mb-3"></i>
                                <h5 class="text-muted">No hay notificaciones</h5>
                                <p class="text-muted">No tienes notificaciones pendientes en este momento.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-lg-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-faded">
                        <h5 class="mb-0">
                            <i class="fas fa-cog me-2"></i>
                            Configuración de Notificaciones
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h6 class="mb-3">Recordatorios de Vencimiento</h6>
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="checkbox" id="notif7dias" checked>
                                    <label class="form-check-label" for="notif7dias">
                                        7 días antes del vencimiento
                                    </label>
                                </div>
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="checkbox" id="notif3dias" checked>
                                    <label class="form-check-label" for="notif3dias">
                                        3 días antes del vencimiento
                                    </label>
                                </div>
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="checkbox" id="notif1dia" checked>
                                    <label class="form-check-label" for="notif1dia">
                                        1 día antes del vencimiento
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="notifVencido">
                                    <label class="form-check-label" for="notifVencido">
                                        El día del vencimiento
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <h6 class="mb-3">Otros Recordatorios</h6>
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="checkbox" id="notifEvaluacion" checked>
                                    <label class="form-check-label" for="notifEvaluacion">
                                        Recordatorio para evaluar el plan
                                    </label>
                                </div>
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="checkbox" id="notifMenus" checked>
                                    <label class="form-check-label" for="notifMenus">
                                        Nuevos menús disponibles
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="notifConsejos">
                                    <label class="form-check-label" for="notifConsejos">
                                        Consejos nutricionales semanales
                                    </label>
                                </div>
                            </div>
                        </div>
                        <hr class="my-3">
                        <div class="d-flex justify-content-end">
                            <button type="button" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>
                                Guardar Configuración
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-lg-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-faded">
                        <h5 class="mb-0">
                            <i class="fas fa-chart-line me-2"></i>
                            Resumen de Actividad
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-md-3">
                                <div class="border rounded p-3">
                                    <i class="fas fa-clipboard-list fa-2x text-primary mb-2"></i>
                                    <h4 class="mb-1">2</h4>
                                    <small class="text-muted">Planes Activos</small>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="border rounded p-3">
                                    <i class="fas fa-utensils fa-2x text-success mb-2"></i>
                                    <h4 class="mb-1">14</h4>
                                    <small class="text-muted">Menús Generados</small>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="border rounded p-3">
                                    <i class="fas fa-star fa-2x text-warning mb-2"></i>
                                    <h4 class="mb-1">1</h4>
                                    <small class="text-muted">Evaluaciones</small>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="border rounded p-3">
                                    <i class="fas fa-calendar-check fa-2x text-info mb-2"></i>
                                    <h4 class="mb-1">30</h4>
                                    <small class="text-muted">Días Seguidos</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

