@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewBag.Title = "Prueba de Email";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4>🧪 Prueba de Configuración de Email</h4>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="SendTestEmail" method="post">
                        <div class="mb-3">
                            <label for="testEmail" class="form-label">Email de Prueba:</label>
                            <input type="email" class="form-control" id="testEmail" name="testEmail" 
                                   placeholder="tu@email.com" required>
                            <div class="form-text">Ingresa tu email para recibir un mensaje de prueba</div>
                        </div>
                        
                        <button type="submit" class="btn btn-primary">Enviar Email de Prueba</button>
                    </form>

                    <hr>
                    
                    <div class="mt-4">
                        <h6>📋 Instrucciones:</h6>
                        <ol>
                            <li>Ingresa tu email en el campo superior</li>
                            <li>Haz clic en "Enviar Email de Prueba"</li>
                            <li>Revisa tu bandeja de entrada (y spam)</li>
                            <li>Si no llega, revisa la configuración de Gmail</li>
                        </ol>
                    </div>

                    <div class="mt-4">
                        <h6>🔧 Configuración de Gmail:</h6>
                        <ul>
                            <li>Activar verificación en 2 pasos</li>
                            <li>Generar contraseña de aplicación</li>
                            <li>Usar la contraseña de aplicación en appsettings.json</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
