@model Abstract_CR.Models.Usuario
@{
    ViewData["Title"] = "Editar Perfil";
}

<section class="page-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="position-relative mb-5">
                    <a href="@Url.Action("Perfil", "Usuario")" class="btn position-absolute" style="left: 0; top: 0; background-color: #2F170F; border-color: #2F170F; color: white;" title="Volver a Mi Perfil">
                        <i class="fas fa-arrow-left"></i>
                    </a>
                    <div class="text-center">
                        <h2 class="section-heading">
                            <span class="section-heading-upper" style="color:#e6a756">Editar</span>
                            <span class="section-heading-lower" style="color:#f6e1c5">Mi Perfil</span>
                        </h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card shadow-sm">
                    <div class="card-header bg-faded">
                        <h5 class="mb-0">
                            <i class="fas fa-user-edit me-2"></i>
                            Información Personal
                        </h5>
                    </div>
                    <div class="card-body">
                        <form asp-action="EditarPerfil" method="post">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="NombreCompleto" class="form-label"></label>
                                    <input asp-for="NombreCompleto" class="form-control" />
                                    <span asp-validation-for="NombreCompleto" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Email" class="form-label"></label>
                                    <input asp-for="Email" class="form-control" type="email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Telefono" class="form-label"></label>
                                    <input asp-for="Telefono" class="form-control" type="tel" />
                                    <span asp-validation-for="Telefono" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="FechaNacimiento" class="form-label"></label>
                                    <input asp-for="FechaNacimiento" class="form-control" type="date" />
                                    <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Genero" class="form-label"></label>
                                    <select asp-for="Genero" class="form-select">
                                        <option value="">Seleccionar género</option>
                                        <option value="Masculino">Masculino</option>
                                        <option value="Femenino">Femenino</option>
                                        <option value="No binario">No binario</option>
                                        <option value="Prefiero no decir">Prefiero no decir</option>
                                    </select>
                                    <span asp-validation-for="Genero" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Altura" class="form-label"></label>
                                    <div class="input-group">
                                        <input asp-for="Altura" class="form-control" type="number" min="100" max="250" />
                                        <span class="input-group-text">cm</span>
                                    </div>
                                    <span asp-validation-for="Altura" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Peso" class="form-label"></label>
                                    <div class="input-group">
                                        <input asp-for="Peso" class="form-control" type="number" min="30" max="300" step="0.1" />
                                        <span class="input-group-text">kg</span>
                                    </div>
                                    <span asp-validation-for="Peso" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="NivelActividad" class="form-label"></label>
                                    <select asp-for="NivelActividad" class="form-select">
                                        <option value="">Seleccionar nivel</option>
                                        <option value="Sedentario">Sedentario (poco o ningún ejercicio)</option>
                                        <option value="Leve">Leve (ejercicio ligero 1-3 días/semana)</option>
                                        <option value="Moderado">Moderado (ejercicio moderado 3-5 días/semana)</option>
                                        <option value="Activo">Activo (ejercicio intenso 6-7 días/semana)</option>
                                        <option value="Muy activo">Muy activo (ejercicio muy intenso, trabajo físico)</option>
                                    </select>
                                    <span asp-validation-for="NivelActividad" class="text-danger"></span>
                                </div>
                                <div class="col-12 mb-3">
                                    <label asp-for="ObjetivoNutricional" class="form-label"></label>
                                    <select asp-for="ObjetivoNutricional" class="form-select">
                                        <option value="">Seleccionar objetivo</option>
                                        <option value="Perder peso">Perder peso</option>
                                        <option value="Mantener peso saludable">Mantener peso saludable</option>
                                        <option value="Ganar peso">Ganar peso</option>
                                        <option value="Mejorar rendimiento deportivo">Mejorar rendimiento deportivo</option>
                                        <option value="Mantener salud general">Mantener salud general</option>
                                        <option value="Controlar condición médica">Controlar condición médica</option>
                                    </select>
                                    <span asp-validation-for="ObjetivoNutricional" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="text-center mt-4">
                                <button type="submit" class="btn btn-primary btn-lg me-3">
                                    <i class="fas fa-save me-2"></i>
                                    Guardar Cambios
                                </button>
                                <a href="@Url.Action("Perfil", "Usuario")" class="btn btn-outline-secondary btn-lg">
                                    <i class="fas fa-times me-2"></i>
                                    Cancelar
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 