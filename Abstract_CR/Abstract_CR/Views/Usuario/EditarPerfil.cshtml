@model Abstract_CR.Models.Usuario

@{
    ViewData["Title"] = "Editar Perfil";
}

<section class="page-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="position-relative mb-5">
                    <a href="@Url.Action("Perfil", "Usuario")" class="btn position-absolute"
                       style="left: 0; top: 0; background-color: #2F170F; border-color: #2F170F; color: white;"
                       title="Volver a Mi Perfil">
                        <i class="fas fa-arrow-left"></i>
                    </a>
                    <div class="text-center">
                        <h2 class="section-heading">
                            <span class="section-heading-upper" style="color:#e6a756">Editar</span>
                            <span class="section-heading-lower" style="color:#f6e1c5">Mi Perfil</span>
                        </h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card shadow-sm">
                    <div class="card-header bg-faded">
                        <h5 class="mb-0">
                            <i class="fas fa-user-edit me-2"></i>
                            Informaci칩n Personal
                        </h5>
                    </div>
                    <div class="card-body">
                        <form asp-action="EditarPerfil" asp-controller="Usuario" method="post">
                            @Html.AntiForgeryToken()
                            <input asp-for="UsuarioID" type="hidden" />

                            <div asp-validation-summary="All" class="text-danger mb-3"></div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Nombre" class="form-label"></label>
                                    <input asp-for="Nombre" class="form-control" placeholder="Nombre" />
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label asp-for="Apellido" class="form-label"></label>
                                    <input asp-for="Apellido" class="form-control" placeholder="Apellido" />
                                    <span asp-validation-for="Apellido" class="text-danger"></span>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label asp-for="CorreoElectronico" class="form-label"></label>
                                    <input asp-for="CorreoElectronico" class="form-control" type="email" placeholder="Correo electr칩nico" />
                                    <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label asp-for="ContrasenaHash" class="form-label">Nueva contrase침a (opcional)</label>
                                    <input asp-for="ContrasenaHash" class="form-control" type="password" placeholder="Contrase침a" />
                                    <span asp-validation-for="ContrasenaHash" class="text-danger"></span>
                                </div>

                               


                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Estado de la cuenta</label>
                                    <div class="form-check form-switch">
                                        <input asp-for="Activo" class="form-check-input" type="checkbox" id="activoSwitch" />
                                        <label class="form-check-label" for="activoSwitch">
                                            @(Model.Activo ? "Activa" : "Inactiva")
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="text-center mt-4">
                                <button type="submit" class="btn btn-primary btn-lg me-3">
                                    <i class="fas fa-save me-2"></i>
                                    Guardar Cambios
                                </button>
                                <a href="@Url.Action("Perfil", "Usuario")" class="btn btn-outline-secondary btn-lg">
                                    <i class="fas fa-times me-2"></i>
                                    Cancelar
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
