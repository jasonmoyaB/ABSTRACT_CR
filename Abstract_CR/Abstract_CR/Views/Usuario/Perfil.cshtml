@model Abstract_CR.Models.Usuario
@{
    ViewData["Title"] = "Mi Perfil";
}
<link rel="icon" type="image/x-icon" href="~/assets/img/LOGO01.jfif" />
<section class="page-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="text-center mb-5">
                    <h2 class="section-heading">
                        <span class="section-heading-upper" style="color:#e6a756">Mi Perfil</span>
                        <span class="section-heading-lower" style="color:#f6e1c5">Información Personal</span>
                    </h2>
                </div>
            </div>
        </div>

        @if (TempData["Mensaje"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>
                @TempData["Mensaje"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="row">
            <!-- Información Personal -->
            <div class="col-lg-8">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-faded">
                        <h5 class="mb-0">
                            <i class="fas fa-user me-2"></i>
                            Información Personal
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Nombre Completo</label>
                                <p class="form-control-plaintext">@Model.NombreCompleto</p>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Correo Electrónico</label>
                                <p class="form-control-plaintext">@Model.Email</p>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Teléfono</label>
                                <p class="form-control-plaintext">@(Model.Telefono ?? "No especificado")</p>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Fecha de Nacimiento</label>
                                <p class="form-control-plaintext">@(Model.FechaNacimiento?.ToString("dd/MM/yyyy") ?? "No especificada")</p>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Género</label>
                                <p class="form-control-plaintext">@(Model.Genero ?? "No especificado")</p>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Altura</label>
                                <p class="form-control-plaintext">@(Model.Altura?.ToString() ?? "No especificada") cm</p>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Peso</label>
                                <p class="form-control-plaintext">@(Model.Peso?.ToString() ?? "No especificado") kg</p>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Nivel de Actividad</label>
                                <p class="form-control-plaintext">@(Model.NivelActividad ?? "No especificado")</p>
                            </div>
                            <div class="col-12 mb-3">
                                <label class="form-label fw-bold">Objetivo Nutricional</label>
                                <p class="form-control-plaintext">@(Model.ObjetivoNutricional ?? "No especificado")</p>
                            </div>
                        </div>
                        <div class="text-center mt-4">
                            <a href="@Url.Action("EditarPerfil", "Usuario")" class="btn btn-primary btn-lg">
                                <i class="fas fa-edit me-2"></i>
                                Editar Perfil
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Panel de Acciones Rápidas -->
            <div class="col-lg-4">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-faded">
                        <h5 class="mb-0">
                            <i class="fas fa-cogs me-2"></i>
                            Gestión de Salud
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-3">
                            <a href="@Url.Action("Alergias", "Usuario")" class="btn btn-outline-primary">
                                <i class="fas fa-allergies me-2"></i>
                                Mis Alergias
                            </a>
                            <a href="@Url.Action("Restricciones", "Usuario")" class="btn btn-outline-primary">
                                <i class="fas fa-ban me-2"></i>
                                Mis Restricciones
                            </a>
                            <a href="@Url.Action("Preferencias", "Usuario")" class="btn btn-outline-primary">
                                <i class="fas fa-heart me-2"></i>
                                Mis Preferencias
                            </a>
                            <a href="@Url.Action("Index", "PlanNutricional")" class="btn btn-outline-primary">
                                <i class="fas fa-apple-alt me-2"></i>
                                Mi plan
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Información de Cuenta -->
                <div class="card shadow-sm">
                    <div class="card-header bg-faded">
                        <h5 class="mb-0">
                            <i class="fas fa-info-circle me-2"></i>
                            Información de Cuenta
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Miembro desde</label>
                            <p class="form-control-plaintext">@Model.FechaCreacion.ToString("dd/MM/yyyy")</p>
                        </div>
                        @if (Model.FechaActualizacion.HasValue)
                        {
                            <div class="mb-3">
                                <label class="form-label fw-bold">Última actualización</label>
                                <p class="form-control-plaintext">@Model.FechaActualizacion.Value.ToString("dd/MM/yyyy")</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section> 